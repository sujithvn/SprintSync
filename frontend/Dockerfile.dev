# Development Dockerfile for hot reloading
FROM node:22-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Expose port
EXPOSE 3300

# Start development server with hot reloading
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "3300"]
